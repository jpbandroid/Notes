<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Notes" parent="Theme.Material3.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:navigationBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:fastScrollThumbDrawable">@drawable/afs_md2_thumb</item>
        <item name="android:fastScrollTrackDrawable">@drawable/afs_md2_track</item>
        <item name="android:scrollbarThumbHorizontal">@drawable/afs_md2_thumb</item>
        <item name="android:scrollbarTrackHorizontal">@drawable/afs_md2_track</item>
        <item name="android:scrollbarThumbVertical">@drawable/afs_md2_thumb</item>
        <item name="android:scrollbarTrackVertical">@drawable/afs_md2_track</item>
    </style>

